.navbar.bavbar-default.navbar-fixed-top
  .container
    .navbar-header
      a.navbar-brand(href='/') 仅仅是个BLOG
    p.navbar-text.navbar-right
      a.navbar-link(href="#" data-toggle="modal" data-target="#signupModal") 注册
      span &nbsp;|&nbsp;
      a.navbar-link(href="#" data-toggle="modal" data-target="#signinModal") 登陆
#signupModal.modal.fade
   .modal-dialog
       .modal-content
         form(method="POST", action="/user/signup")
          .modal-header 注册
             a.pull-right( data-dismiss='modal') X
          .modal-body
             .form-group
               label(for="sigunupName") 用户名
               input#sigunupName.form-control(name="user[username]" type="text")
             .form-group
               label(for="sigunupPassword") 密　码
               input#sigunupPassword.form-control(name="user[password]" type="password")
          .modal-footer
               button.btn.btn-success(type="submit") 提交
               button.btn.btn-default(type="button",data-dismiss='modal') 关闭
