extends ../layout

block style
  include ../includes/style
  include ../includes/googlecodeprettifycss
  include ../includes/font-awesome
block scripts
  include ../includes/googlecodeprettifyjs
  include ../includes/baidu-ueditor
  
block sidebar
  include ../blocks/sidebar
block foot
  include ../blocks/foot
block content
  .container.content
    .row
      h1 添加文章
      .hr
      form#addArticle.form-horizontal(role="form" method="post" action="/add")
        .form-group
          lable.control-label.col-sm-2(for="title") 标题
          .col-sm-8
            input.form-control#title(type="text" placeholder="请输入文章标题" name="title")
        .form-group
          lable.control-label.col-sm-2(for="title") 副标题
          .col-sm-8
            input.form-control#title(type="text" placeholder="请输入文章副标题" name="subtitle")
          .col-sm-12
             script#editor(type="text/plain" style="width:100%;height:400px;")
        .col-sm-5
        .col-sm-2
            input#add.btn.btn-primary.btn-lg(type="submit" value="提交文章" onclick="add" )
        .col-sm-5
        